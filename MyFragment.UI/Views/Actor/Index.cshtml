@using MyFragment.UI.Models
@using MyFragment.Entities.Entity
@model IEnumerable<MyFragment.Entities.Entity.Actor>

@{
    ViewBag.Title = "Liste";
}

<div class="container">
    <div class="row">
        <div class="col-12">

            <h2 class="mt-5 mb-3">Oyuncu Listesi</h2>

            @if (CurrentSession.Get<Movie>("selectedMovie") != null)
            {
                @HelperMethod.IconLink(Url.Action("Index", "Movie"), "arrow-circle-left", "btn-secondary", "Film listesine dön")

                string name = CurrentSession.Get<Movie>("selectedMovie").Name.ToString();
                <h4 class="mt-3">@name</h4>
            }
            <hr />
            @HelperMethod.IconLink(Url.Action("Create"), "plus-circle", "btn-outline-success mb-2", "Yeni Kayıt")
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Surname)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td class="align-middle">
                                <img src="~/img/ActorPhotos/@item.ImagePath" height="80" width="60" alt="@Html.DisplayFor(modelItem => item.ImagePath)" />
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td class="align-middle">
                                @HelperMethod.IconLink(Url.Action("Edit", new { id = item.Id }), "edit", "btn-sm btn-warning mb-1", "Düzenle")
                                @HelperMethod.IconLink(Url.Action("Delete", new { id = item.Id }), "trash-alt", "btn-sm btn-danger mb-1", "Sil")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>