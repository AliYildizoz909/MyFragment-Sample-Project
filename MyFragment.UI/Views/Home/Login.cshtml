@using MyFragment.Entities.ViewModel
@model LoginViewModel

@{
    ViewBag.Title = "Giriş";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 text-center mb-5">
            </div>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <!-- form card login -->
                    <div class="card rounded-0" id="login-form">
                        <div class="card-header">
                            <h3 class="mb-0">Giriş</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm())
                            {

                                @Html.ValidationSummary((bool)TempData["key"], "", new { @class = "text-danger" })

                                <div class="form-group">
                                    <label for="uname1">Kullanıcı adı</label>
                                    @Html.TextBoxFor(I => I.Username, new { @class = "form-control form-control-lg rounded-0" })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Şifre</label>
                                    @Html.TextBoxFor(I => I.Password, new { @class = "form-control form-control-lg rounded-0" ,type="password"})
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>

                                <div>
                                    <label class="custom-control custom-checkbox">
                                        <a href="@Url.Action("Register")" class="register-form-link">Üye Ol</a>
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success btn-lg float-right">Giriş</button>
                            }
                        </div>
                    </div>
                    <!-- /form card login end-->
                </div>
            </div>
        </div>
    </div>
</div>


